        <Viewbox Stretch="Fill">
            <Canvas Width="1920" Height="1080">
                <TextBlock Canvas.Left="600" Canvas.Top="450" FontSize="100" FontWeight="Bold" Text="正确答案"/>
                <TextBlock Name="AnswerSymbol" Canvas.Left="1120" TextWrapping="Wrap" Canvas.Top="380" FontSize="200" FontWeight="Bold" Foreground="#8aaabc" Text="A"/>
                <TextBlock Name="Answer" Canvas.Left="424" Canvas.Top="607" FontSize="90" TextWrapping="Wrap" Text="A.选项" TextAlignment="Center" Width="1046" Height="275"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Page>
